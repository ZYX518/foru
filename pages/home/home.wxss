scroll-view {
  width: 100%;
  white-space: nowrap;
}
.page-column {
  padding: 0 11rpx 11rpx 0;
  display: inline-block;
  background-color: white;
}
.sale_img {
  border: 1rpx solid #f2f2f2;
  border-radius: 4px;
  overflow: hidden;
  width: 159rpx;
  height: 159rpx;
}
.name{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 170rpx;
}
.name text{
    font-size: 26rpx;
    margin: 5rpx 10rpx;
    width: 100%;
}
